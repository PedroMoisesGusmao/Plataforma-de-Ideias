<h2>Todas as Ideias:</h2>
{{#if ideas.length}}
  <ul>
    {{#each ideas}}
      <li>
        <b>{{this.title}}</b> - {{this.description}} - 
        <a href="/idea/edit/{{this._id}}">Editar</a>
        <form style="display:inline;" method="post" action="/idea/delete">
          <input type="hidden" name="id" value="{{this._id}}"/>
          <button type="submit">Excluir</button>
        </form>
      </li>
    {{/each}}
  </ul>
